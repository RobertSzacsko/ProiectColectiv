@model IEnumerable<ProiectColectiv.Utilizator>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

            <div class="row">


                <div class="col-sm-offset-3 col-lg-offset-3 col-md-offset-3 col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <img class="logImg" src='@Url.Content("~/Content/Images/Logo.png")' width="25%"/>
                </div>

            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6  vertAlign">

            <div class=" row">
                <div class="col-sm-offset-3 col-lg-offset-3 col-md-offset-3 col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
                    <form class="form-horizontal" method="post">
                        <br><br><br>
                        <div class="form-group">
                            <label class="control-label col-sm-2 text-center" for="name">Cod</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name" placeholder="Introduceti Cod de Autentificare" name="Nume">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="prenume">Parola</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="prenume" placeholder="Introduceti Parola" name="prenume">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Login</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>


