@model ProiectColectiv.Diagnostic

<div class="modal fade" id="DiagnosticModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">x</span>
                </button>
                @using (Html.BeginForm("AddDiagnostic", "Medic", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id_Diagnostic)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Descriere, htmlAttributes: new { @class = "control-label col-md-2 margin-top-20" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Descriere, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Descriere, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salveaza" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Inapoi</button>
            </div>
        </div>
    </div>
</div>