@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<p hidden id="general-modal">
    @if (@ViewData["modal"] != null)
    {
        @ViewData["modal"]
    }
</p>

<div class="modal fade" id="GeneralModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="general-modal-content general-modal">
                    <span class="@ViewData["InfoClasses"]">@ViewData["Info"]</span>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-default" href="@Url.Action("Index", "Medic")">Inapoi</a>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/Scripts/general-modal.js")