<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asistent</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top menu-custom">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Asistents")'>
                    <img src='@Url.Content("~/Content/Images/Logo.png")' width="50" height="50" />
                </a>
            </div>
            <div class="navbar-collapse collapse" style="font-weight:600; font-size:20px">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Vizualizare Prog", "ListaProgramari", "Asistents")</li>
                    <li>@Html.ActionLink("Management Prog", "ManagementPacienti", "Asistents")</li>
                    <li>@Html.ActionLink("Managementul Pacientilor", "PaginaPacienti", "Asistents")</li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container-wraper body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <footer>
        <div class="footer-wraper">
            <div class="footer-content">
                <p class="footer-p">&copy; @DateTime.Now.Year - Proiect Colectiv</p>
            </div>
        </div>
    </footer>
</body>
</html>
